<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_card"
    android:padding="@dimen/default_20dp"
    android:layout_marginStart="@dimen/default_8dp"
    android:layout_marginEnd="@dimen/default_8dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/default_40dp"
        android:layout_height="@dimen/default_40dp"
        android:layout_marginTop="@dimen/default_20dp"
        android:src="@drawable/default_icon"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_12dp"
        android:gravity="center"
        android:text="@string/default_text"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/default_coin_title"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_12dp"
        android:text="@string/default_text"
        android:gravity="center"
        android:textColor="@color/hint_text"
        android:textSize="@dimen/default_coin_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="@string/default_text"
            android:textColor="@color/arrow_up"
            android:textSize="@dimen/default_coin_name"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_upward" />

    </LinearLayout>

</LinearLayout>